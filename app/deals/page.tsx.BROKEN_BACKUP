import { Button } from "@/app/components/ui/Button";
import ImageUploader from "@/app/deals/components/ImageUploader";

"use client";

import { useState, useEffect, useRef } from "react";

export default function DealsRoom() {
  const [messages, setMessages] = useState<any[]>([]);
  const [text, setText] = useState("");
  const bottomRef = useRef<HTMLDivElement | null>(null);

  useEffect(() => {
    bottomRef.current?.scrollIntoView({ behavior: "smooth" });
  }, [messages]);

  const sendText = () => {
    if (!text.trim()) return;
    setMessages([...messages, { id: Date.now(), text }]);
    setText("");
  };

  return (
    <main className="max-w-md mx-auto p-4">

      <h2 className="text-xl font-semibold mb-1">ðŸ’¬ Deals Room</h2>
      <p className="text-sm text-muted mb-3">
        Client â†” Service Provider discussion area
      </p>

      {/* MEDIA STRIP (TOP) */}
      <div className="grid grid-cols-3 gap-2 mb-3">
        <ImageUploader />
        <Button className="bg-blue-600 text-white py-2 rounded ui-card-xl font-medium shadow">
          Audio
        </Button>
        <Button className="bg-purple-600 text-white py-2 rounded ui-card-xl font-medium shadow">
          Video
        </Button>
      </div>

      {/* CHAT BOX */}
      <div className="border rounded ui-card-xl bg-white min-h-[320px] p-3 flex items-center justify-center text-gray-400 mb-3">
        {messages.length === 0 ? "No messages yet" : "Messages"}
        <div ref={bottomRef} />
      </div>

      {/* INPUT ROW */}
      <div className="flex gap-2 mb-3">
        <input
          className="flex-1 border rounded ui-card-xl px-3 py-2"
          placeholder="Type your message..."
          value={text}
          onChange={(e) => setText(e.target.value)}
        />
        <Button
          onClick={sendText}
          className="bg-green-600 text-white px-4 rounded ui-card-xl font-medium"
        >
          Send
        </Button>
      </div>

      {/* ACTION BUTTONS */}
      <div className="grid grid-cols-2 gap-2">
        <Button className="border rounded ui-card-lg py-2">Report Issue</Button>
        <Button className="border rounded ui-card-lg py-2">Exit Deal</Button>
        <Button className="bg-green-600 text-white rounded ui-card-lg py-2">
          Mark as Done
        </Button>
        <Button className="bg-red-600 text-white rounded ui-card-lg py-2">
          Cancel Deal
        </Button>
      </div>

    </main>
  );
}
